<title>Record Saling Book</title>
<div class="row">
  <div class="col-12 col-lg-10 col-xxl-12 d-flex">
    <div class="card flex-fill">
      <div class="card-header">
        <h5 class="card-title mb-0">Record Saling Book</h5>
      </div>
      <div style="margin-left: 20px;" ><a asp-controller ="storeowner" asp-action ="ExportExcel"><i class="fa-solid fa-file-excel" style="font-size: 30px;"></i></a></div>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
      </script>
      <div>
        <canvas id="Book Sale Record" width="400" height="100"></canvas>
      </div>
      <script>
        const labels = [@Html.Raw(ViewData["labels"])];

        const data = {
          labels: labels,
          datasets: [{
            label: 'Quantity',
            backgroundColor: [@Html.Raw(ViewData["rgbs"])],
            borderColor: 'rgb(255, 99, 132)',
            data: [@ViewData["totals"]],
            barPercentage: 0.5,
            barThickness: 80,
          }]
        };

        const config = {
          type: 'bar',
          data: data,
          options: {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero: true
                }
              }]
            }
          }
        };
      </script>
      <script>
        const myChart = new Chart(
          document.getElementById('Book Sale Record'),
          config
        );
      </script>

    </div>
  </div>