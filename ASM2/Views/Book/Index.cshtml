@model IEnumerable<FPTBOOK_STORE.Models.Book>

<title>Book List</title>
<div class="row">
    <div class="col-12 col-lg-10 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">

                <h5 class="card-title mb-0">Book List</h5>
            </div>
            <div class="card-header">
                <a asp-action="Create" class="btn btn-primary"><i class="fa-sharp fa-solid fa-plus"></i></a>
            </div>
            <table class="table table-hover my-0" style="margin-left:10px ;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher)
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src="~/uploads/@Html.DisplayFor(modelItem => item.UploadImage)" width="100"
                                height="100" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Publisher.Name)
                            </td>
                            <td style="max-width:100px;white-space: nowrap; overflow: hidden;text-overflow: ellipsis">
                                @item.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"
                                style="font-size:7px ;"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                                style="font-size:7px"><i class="fa-sharp fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
