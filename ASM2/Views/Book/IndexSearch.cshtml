@model FPTBOOK_STORE.Models.BookCategoryViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Book" asp-action="BookHome" method="get">
    <p>

        <select asp-for="BookCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="Search" />
        <input type="submit" value="Filter" />
    </p>
</form>


<div>
    <!-- Start Content -->
    <div class="container py-5" >
        <div class="row">
            <div class="col-lg-3">
                <h1 class="h2 pb-4">Categories</h1>
                <ul class="list-unstyled templatemo-accordion">
                    <li class="pb-3">
                        @* @foreach (var item in Model)
                            {
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                            @Html.DisplayFor(modelItem => item.Category.Name)
                            <i class="fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                            } *@
                    </li>               
                </ul>
            </div>
            <div class="col-lg-9">
                <div class="row" style = "margin-top:50px">
                    @foreach (var item in Model.Books)
                    {
                    <div class="col-md-4">
                        <div class="card mb-4 product-wap rounded-0">
                            <div class="card rounded-0">
                                <img class="card-img rounded-0 img-fluid" style = "width: 100%; height: 250px;" src="~/uploads/@Html.DisplayFor(modelItem => item.UploadImage)">
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">
                                        <li><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light"><i class="far fa-eye"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                <a href="shop-single.html" class="h3 text-decoration-none">Name: @Html.DisplayFor(modelItem => item.Name)</a>
                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                    <li>Author: @Html.DisplayFor(modelItem => item.Author.Name)</li>
                                </ul>
                                <p class="text-center mb-0" style="margin-top: 10px"> <strong>$@(item.Price * 1.1)</strong></p>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                        </div>  
                    </div>
                    }
            </div>   
        </div>
    </div>
    </div>