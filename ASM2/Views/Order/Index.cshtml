@model IEnumerable<FPTBOOK_STORE.Models.Order>
@{
    String[] Status = new String[]{
"warning",
"info",
"primary",
"success",
"danger",
};
     String[] Status_Name = new String[]{
"In Process",
"To Ship",
"Delivery",
"Completed",
"Cancel",
};
}
<title>Order List</title>
<div class="row">
    <div class="col-12 col-lg-10 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">

                <h5 class="card-title mb-0">Order List</h5>
            </div>
            <table class="table table-hover my-0" style="margin-left:10px;">
                <thead>
                    <tr>
                        <th>
                            Customer
                        </th>
                        <th>
                            OrderDate
                        </th>
                        <th>
                            Status
                        </th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {   

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FPTBOOKUser.Name)</td>
                            <td>
                                @item.OrderDate.ToString("dd/MM/yyyy")
                            </td>
                            <td><span class="badge bg-@Status[item.Status]">@Status_Name[item.Status]</span></td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"
                                style="font-size:7px ;"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="OrderDetail" asp-action="index" asp-route-id="@item.Id" class="btn btn-primary" style="font-size:7px"><i
                                    class="fa-sharp fa-solid fa-info"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
