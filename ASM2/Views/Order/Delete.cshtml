@model FPTBOOK_STORE.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<main class="d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Delete</h1>
							<p class="lead">
								Are you sure you want to delete this order?
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form method="post" id = "account" name = "form1" class="form-horizontal">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="mb-3">
                                            <p><strong>@Html.DisplayNameFor(model => model.OrderDate): </strong>
                                            @Html.DisplayFor(model => model.OrderDate)
                                            </p>
										</div>
										<div class="mb-3">
                                            <p><strong>@Html.DisplayNameFor(model => model.Status): </strong>
                                            @Html.DisplayFor(model => model.Status)
                                            </p>
										</div>
										<div class="mb-3">
                                            <p><strong>@Html.DisplayNameFor(model => model.FPTBOOKUser): </strong>
                                            @Html.DisplayFor(model => model.FPTBOOKUser.Name)
                                            </p>
										</div>
										<div class="text-center mt-3">
											<button id="" type="submit"  class="btn btn-dark">Delete</button>
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>