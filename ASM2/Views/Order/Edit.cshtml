@model FPTBOOK_STORE.Models.Order

<title>Edit Order</title>
<div class="row">
    <div class="col-12 col-lg-10 col-xxl-12 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">Edit Order</h5>
            </div>
            <div class="row" style="margin-left:10px">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group"> 
                            <input type="hidden" asp-for="OrderDate" class="form-control" />
                        </div>
                        <div class="form-group"> 
                            <input type="hidden" asp-for="FPTBOOKUserId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value=0>In Process</option>
                                <option value=1>To Ship</option>
                                <option value=2>Delivery</option>
                                <option value=3>Completed</option>
                                <option value=4>Cancel</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:10px ;">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-primary">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
